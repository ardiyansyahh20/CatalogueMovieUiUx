<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ardi.cataloguemovieuiux">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <permission android:name="com.ardi.cataloguemovieuiux.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.ardi.cataloguemovieuiux.WRITE_DATABASE" android:protectionLevel="normal"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".search.DetailFilmActivity"></activity>
        <provider
            android:authorities="com.ardi.cataloguemovieuiux"
            android:name=".provider.FilmProvider"
            android:exported="true"
            android:readPermission="com.ardi.cataloguemovieuiux.READ_DATABASE"
            android:writePermission="com.ardi.cataloguemovieuiux.WRITE_DATABASE"/>
    </application>

</manifest>